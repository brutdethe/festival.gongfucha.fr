@import url('tokens.css');
@import url('https://fonts.googleapis.com/css2?family=Lexend:wght@300;500;700&display=swap');

/* === Reset & base === */
* {
  box-sizing: border-box;
  margin: 0;
  padding: 0;
}

body {
  font-family: var(--font-lexend);
  color: #222;
  background: var(--color-cream);
  line-height: 1.6;
  font-size: clamp(1rem, 1.5vw, 1.2rem);
}

/* === Typography === */
h1,
h2,
h3 {
  font-family: var(--font-title);
  color: var(--color-bamboo);
  margin-block: var(--space-3);
}

h1 {
  font-size: clamp(2.2rem, 5vw, 3rem);
}

h2 {
  font-size: clamp(1.6rem, 4vw, 2.2rem);
}

h3 {
  font-size: clamp(1.4rem, 3.5vw, 2rem);
}

/* === Layout helpers === */
.container {
  width: 90%;
  max-width: 820px;
  margin-inline: auto;
  padding-block: var(--space-4);
}

.grid {
  display: grid;
  gap: var(--space-3);
}

.grid-3 {
  gap: var(--space-4);
}

@media (min-width: 768px) {
  .grid-3 {
    grid-template-columns: repeat(3, 1fr);
  }
}

/* === Buttons === */
.btn {
  display: inline-block;
  font-size: clamp(1rem, 1.8vw, 1.1rem);
  font-weight: 500;
  padding: var(--space-2) var(--space-3);
  background: var(--color-bamboo);
  color: #fff;
  text-decoration: none;
  border-radius: 4px;
  transition: opacity .2s;
}

.btn:hover,
.btn:focus-visible {
  opacity: .9;
  outline: 2px solid var(--color-bamboo);
  outline-offset: 2px;
}

.btn-bamboo { background: var(--color-bamboo); }
.btn-terre  { background: var(--color-terre); }

/* === Hero === */
.hero {
  position: relative;
  min-height: 100vh;
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
  color: #fff;
}

.hero-overlay {
  position: absolute;
  inset: 0;
  background: linear-gradient(rgba(0,0,0,0), rgba(0,0,0,.25));
}

.hero .container {
  position: relative;
  z-index: 1;
  padding: var(--space-4);
}

.hero-title {
  font-weight: 700;
  font-size: clamp(2.8rem, 6vw, 4rem);
  line-height: 1.1;
  text-shadow: 0 4px 10px rgba(0,0,0,.7);
  margin-bottom: var(--space-2);
  color: #fff;
}

.hero-subtitle {
  font-weight: 300;
  font-size: clamp(1.1rem, 2.5vw, 1.5rem);
  max-width: 40rem;
  margin-inline: auto;
  text-shadow: 0 2px 6px rgba(0,0,0,.5);
  margin-bottom: var(--space-3);
}

.hero-lieu {
  display: block;
  font-size: 1.2rem;
  margin-bottom: var(--space-5);
}

.hero-background {
  position: absolute;
  inset: 0;
  background: url('/assets/img/hero.jpg') center/cover no-repeat;
  background-attachment: fixed;
  animation: fadeInBg 2s ease-in-out .2s both;
}

@keyframes fadeInBg { from { opacity: 0; } to { opacity: 1; } }

/* === UVP & Story === */
.uvp-title,
.story-title {
  font-weight: 500;
  font-size: clamp(1.9rem, 5vw, 2.6rem);
  margin-bottom: var(--space-3);
}

.uvp-intro,
.story-intro {
  font-weight: 300;
  font-size: clamp(1rem, 2.1vw, 1.2rem);
  line-height: 1.8;
  margin-top: var(--space-3);
  color: #444;
}

.uvp-intro strong { color: var(--color-bamboo); }

/* === Pillars === */
.pillar {
  background: #fff;
  border-radius: 12px;
  padding: var(--space-3);
  box-shadow: 0 6px 14px rgba(0,0,0,.03);
  text-align: center;
  transition: box-shadow .2s, border .2s;
}

.pillar:hover,
.pillar:focus-within {
  box-shadow: 0 8px 20px rgba(49,92,77,.1);
  border: 1px solid var(--color-bamboo);
}

.pillar-icon {
  width: 5rem;
  margin-inline: auto;
}

.pillar-title {
  font-size: 1rem;
  margin-bottom: var(--space-2);
}

.pillar-text {
  font-weight: 300;
  font-size: 1rem;
  color: #555;
}

/* === Banners === */
.banner {
  position: relative;
  width: 100%;
  min-height: 60vh;
}

.banner-ambiance-perrine {
  background: url('/assets/img/banners/ambiance-perrine-768h.jpg') center/cover no-repeat fixed;
}

.banner-equipe {
  background: url('/assets/img/banners/equipe-768h.jpg') center/cover no-repeat fixed;
}

@media (min-width: 900px) {
  .banner-ambiance-perrine { background-image: url('/assets/img/banners/ambiance-perrine-1080h.jpg'); }
  .banner-equipe          { background-image: url('/assets/img/banners/equipe-1080h.jpg'); }
}

@media (min-width: 1300px) {
  .banner-ambiance-perrine { background-image: url('/assets/img/banners/ambiance-perrine-1260h.jpg'); }
  .banner-equipe          { background-image: url('/assets/img/banners/equipe-1260h.jpg'); }
}

.banner .photo-credits {
  position: absolute;
  bottom: 0;
  right: 0;
  padding: .35rem .6rem;
  font-size: .75rem;
  font-style: italic;
  line-height: 1.4;
  background: rgba(0,0,0,.55);
  color: #fff;
}

.banner .photo-credits a { color: inherit; }

/* === Newsletter form === */
.newsletter-form {
  display: flex;
  gap: var(--space-2);
  flex-wrap: wrap;
  justify-content: center;
  margin-top: var(--space-3);
}

.newsletter-form input[type="email"] {
  padding: var(--space-2);
  width: 100%;
  max-width: 250px;
  border: 1px solid #ccc;
  border-radius: 4px;
}

.newsletter-form button { white-space: nowrap; }

/* === Utilities === */
.text-center { text-align: center; }
.margin-top  { margin-top: var(--space-4); }
.section-padded { padding-block: var(--space-4); }

.bg-cream { background-color: var(--color-cream); }