@import url('tokens.css');

*{
  box-sizing:border-box;
  margin:0;padding:0;
}
body{
  font-family:var(--font-base);
  color:#222;background:var(--color-cream);line-height:1.6;
}
h1,h2,h3{
  font-family:var(--font-title);
  margin-block:var(--space-3);
  color:var(--color-bamboo);
}
.container{
  width:90%;
  max-width:800px;
  margin-inline:auto;
  padding-block:var(--space-4);
}
.btn{
  display:inline-block;
  padding:var(--space-2)var(--space-3);
  background:var(--color-bamboo);
  color:white;
  text-decoration:none;
  border-radius:4px;
}
.btn:hover{
  opacity:0.9;
}
.grid{display:grid;
  gap:var(--space-3);
}

@media(min-width:640px){
  .grid-2{grid-template-columns:1fr 1fr;}
}

.hero {
  position: relative;
  min-height: 80vh;
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
  color: white;
}
.hero::before {
  content: "";
  position: absolute;
  inset: 0;
  background: rgba(0, 0, 0, 0.35); /* voile sombre */
  z-index: 1;
}
.hero h1 {
  color: var(--color-cream);
  text-shadow: 0 2px 6px rgba(0, 0, 0, 0.5);

}
.hero img {
  position: absolute;
  inset: 0;
  width: 100%;
  height: 100%;
  object-fit: cover;
  z-index: 0;
}
.hero .container {
  position: relative;
  z-index: 2;
}

/* UTILITAIRES TYPO ET ESPACEMENTS */
.text-center {
  text-align: center;
}
.margin-top {
  margin-top: var(--space-4);
}
.section-padded {
  padding-block: var(--space-4);
}
.max-width-medium {
  max-width: 600px;
  margin-inline: auto;
}

/* VARIANTS DE BOUTONS */
.btn-bamboo {
  background-color: var(--color-bamboo);
  color: white;
}
.btn-terre {
  background-color: var(--color-terre);
  color: white;
}

/* FORMULAIRE NEWSLETTER */
.newsletter-form {
  display: flex;
  gap: var(--space-2);
  flex-wrap: wrap;
  justify-content: center;
  margin-top: var(--space-3);
}
.newsletter-form input[type="email"] {
  padding: var(--space-2);
  width: 100%;
  max-width: 250px;
  border: 1px solid #ccc;
  border-radius: 4px;
  font-family: var(--font-base);
}
.newsletter-form button {
  white-space: nowrap;
}

/* BACKGROUND CRÃˆME ET ARRONDI */
.bg-cream {
  background-color: var(--color-cream);
}
.rounded {
  border-radius: 8px;
}
