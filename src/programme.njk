---
layout: default.njk
title: Programme 2025 – Festival GongFuCha
permalink: /2025/programme/
---

<section class="container">
  <h1>Programme détaillé</h1>
  {% for event in collections.events %}
    <article class="event">
      <h2>{{ event.data.titre }}</h2>

      {% if event.data.image %}
        <img src="{{ "/assets/img/events/" | url }}{{ event.data.image }}" alt="" style="max-width:100%;">
      {% endif %}

      {% if event.data.people %}
        {% for personId in event.data.people %}
          {% set person = collections.people | find("data.id", personId) %}
          {% if person %}
            <div class="person">
              <img src="{{ "/assets/img/people/" | url }}{{ person.data.image }}" alt="{{ person.data.alt or 'Portrait de ' ~ person.data.nom }}" style="max-width:100%;">
              <p><strong>Avec {{ person.data.nom }}</strong> - <a href="{{ person.data.url_site }}">son site</a></p>
              <p>Bio : {{ person.content | safe }}</p>
            </div>
          {% endif %}
        {% endfor %}
      {% endif %}

      {% if event.data.horaire %}
        <p><strong>Horaire :</strong> {{ event.data.horaire }}</p>
      {% endif %}

      {% if event.templateContent %}
        <div class="description">
          Description : 
          {{ event.templateContent | safe }}
        </div>
      {% endif %}
    </article>
  {% endfor %}
</section>
